{
  "name": "triptalk",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "server",
      "web",
      "shared"
    ]
  },
  "engines": {
    "node": "20"
  },
  "scripts": {
    "test": "jest",
    "start": "concurrently 'yarn start:web' 'yarn start:server'",
    "start:web": "docker-compose up -d && yarn workspace @triptalk/web start",
    "start:server": "docker-compose up -d && yarn workspace @triptalk/server start",
    "compile": "yarn workspaces foreach -pA run compile"
  },
  "devDependencies": {
    "@types/jest": "27.5.1",
    "jest": "27.5.1",
    "prettier": "^2.2.1",
    "process": "^0.11.10",
    "typescript": "^4.2.4"
  },
  "packageManager": "yarn@4.3.1"
}
